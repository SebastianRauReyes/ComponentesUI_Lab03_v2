<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sebastian.componentesui_lab03.AndroidButtonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:onClick="simpleButton"
            android:padding="10dp"
            android:text="This is Simple Android Button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/primary_light"
            android:drawableLeft="@mipmap/ic_granade"
            android:onClick="leftIconButton"
            android:padding="10dp"
            android:text="Button With Icon in Left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/primary_light"
            android:drawableRight="@mipmap/ic_granade"
            android:onClick="rightIconButton"
            android:padding="10dp"
            android:text="Button With Icon in Right" />

        <Button
            android:layout_width="299dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button_green"
            android:onClick="backgroundImageButton"
            android:padding="10dp"
            android:text="Button With Background Image" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_border"
            android:onClick="borderButton"
            android:padding="10dp"
            android:text="Button With Border Color" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_radius"
            android:onClick="borderRadiusButton"
            android:padding="10dp"
            android:text="Button With Border Radius" />


        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:onClick="roundButton"
            android:padding="10dp"
            android:text="Round Button" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_green"
            android:onClick="roundButton2"
            android:padding="10dp"
            android:text="Round Button"
            android:textColor="#ffffff" />

    </LinearLayout>

</ScrollView>


